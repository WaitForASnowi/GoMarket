<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    >
    <!--图片的外壳-->
<LinearLayout
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/list_market_pic"
        android:layout_width="@dimen/list_pic_size"
        android:layout_height="@dimen/list_pic_size"
        android:src="@mipmap/ic_launcher"/>

</LinearLayout>

    <!--商家信息的外壳-->
    <LinearLayout

        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <!--超市名称-->
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_marginLeft="8dp"
                   android:textSize="18sp"
                   android:textColor="#000000"
                   android:id="@+id/list_market_text"
                   android:text="超市的描述"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:paddingLeft="5dp"
                   android:src="@drawable/rmb_icon"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   />
           </LinearLayout>

        <!--位置-->
        <LinearLayout
            android:background="@drawable/item_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/site_icon"
                />

            <TextView
                android:id="@+id/list_market_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:padding="10dp"
                android:text="位置"
                android:textColor="@color/colorGary" />
        </LinearLayout>


        <!--优惠信息-->
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/list_market_discount_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠信息"
                android:textColor="@color/colorGary"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>